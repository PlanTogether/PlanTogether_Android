<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_round_2">

    <TextView
        android:id="@+id/initDate"
        android:text="2023년 1월 1일"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:textColor="@color/indigo"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/plusEvent"
            android:layout_weight="1"
            android:text="이벤트 추가"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:textSize="8dp"
            android:background="@drawable/border_round_3"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/plusPlan"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_round_3"
            android:text="일정 추가"
            android:textSize="8dp"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>