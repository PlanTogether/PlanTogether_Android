<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1020px"
    android:layout_height="180px"
    android:layout_marginLeft="30px"
    android:id="@+id/noticeEvent"
    android:background="@drawable/border_round_3">

    <TextView
        android:id="@+id/rowRemainTime"
        android:layout_width="150px"
        android:layout_height="60px"
        android:layout_marginLeft="855px"
        android:gravity="center"
        android:text="날짜"
        android:textSize="11sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/rowNoticeName"
        android:layout_width="900px"
        android:layout_height="60px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_gravity="center"
        android:text="이벤트명 or 일정명"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/rowNoticeInfo"
        android:layout_width="900px"
        android:layout_height="60px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_gravity="center"
        android:text="알림 내용"
        android:textSize="13sp"
        android:textColor="#000000"/>

</LinearLayout>